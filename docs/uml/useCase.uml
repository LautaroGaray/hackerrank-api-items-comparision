@startuml Use Cases

left to right direction
skinparam actorStyle awesome

actor "User" as user
actor "Admin" as admin

rectangle "Item Management System" {
  usecase "Login" as UC1
  usecase "Create Item" as UC2
  usecase "Get Item by ID" as UC3
  usecase "Update Item" as UC4
  usecase "Delete Item" as UC5
  usecase "Compare Items" as UC6
  usecase "Authenticate Request" as UC7
  usecase "Validate Item" as UC8
}

user --> UC1
user --> UC3
user --> UC6

admin --> UC2
admin --> UC4
admin --> UC5

UC2 ..> UC7 : <<include>>
UC3 ..> UC7 : <<include>>
UC4 ..> UC7 : <<include>>
UC5 ..> UC7 : <<include>>
UC6 ..> UC7 : <<include>>

UC2 ..> UC8 : <<include>>
UC4 ..> UC8 : <<include>>

note right of UC1
  Public endpoint
  Returns JWT token
end note

note right of UC7
  JWT validation
  Required for all operations
  except login
end note

@enduml